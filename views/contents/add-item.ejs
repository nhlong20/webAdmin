<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Thêm sản phẩm mới</h1>
</div>
<form class="form-group mt-5" action="/add-to-db" method="POST" enctype="multipart/form-data">
    <label for="name">Tên sản phầm</label>
    <input type="text" id="name" name="product[name]" class="form-control" placeholder="" aria-describedby="helpId">
    <label for="brand">Tên thương hiệu</label>
    <input type="text" id="brand" name="product[brand]" class="form-control" placeholder="" aria-describedby="helpId">
    <label for="price">Giá sản phẩm</label>
    <input type="text" id="price" name="product[price]" class="form-control" placeholder="" aria-describedby="helpId">
    <label for="color">Màu sản phầm</label>
    <input type="text" id="color" name="product[color]" class="form-control" placeholder="" aria-describedby="helpId">
    <label for="status">Trạng thái sản phầm</label>
    <input type="text" id="status" name="product[status]" class="form-control" placeholder="" aria-describedby="helpId">
    <label for="description">Mô tả sản phầm</label>
    <input type="text" id="description" name="product[description]" class="form-control" placeholder=""
        aria-describedby="helpId">
    <label for="size">Kích thước sản phẩm</label>
    <input type="text" id="size" name="product[size]" class="form-control" placeholder="" aria-describedby="helpId">

    <label for="status">Ảnh sản phẩm</label><br>
    <input type="file" accept="image/jpeg, image/png" name="images" multiple="multiple"><br>
    <input type="submit" id="add" class="mt-5 btn btn-primary align-center" value="Thêm">
</form>
<script src="/javascripts/scripts.js"></script>
    <table class="table table-bordered table-striped table-sm" aria-describedby="Product list">
        <thead>
            <tr>
                <th id="name">Tên</th>
                <th id="email">Email</th>
                <th id="phoneNumber">Số điện thoại</th>
                <th id="status">Trạng thái</th>
                <th id="modify">Cập nhật</th>
            </tr>
        </thead>
        <tbody>
            <%if(users.length !=0 ){ users.forEach(user=>{%>
                <tr>
                    <td><%=user.name%></td>
                    <td><%=user.email%></td>
                    <td><%=user.phoneNumber%></td>
                    <td>
                        <%if(user.active == true){%>
                            Kích hoạt
                        <%}else{%>
                            Chưa kích hoạt
                        <%}%>
                    </td>
                    <td>
                        <button class="btn btn-primary">
                            <a style="color:#fff;" href="/users/edit/<%=user._id%>">Chỉnh sửa</a>
                        </button>
                    </td>
                </tr>
                <%}) }else{%>
                    Không có dữ liệu người dùng
                <%}%>
        </tbody>
